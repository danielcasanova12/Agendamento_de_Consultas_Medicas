@page
@model Agenda_Web.Pages.Consulta.CreateModel
@{
}

<h1>Cadastrar Consulta</h1>

<form method="post">
    <div class="form-group">
        <label for="medico">Médico:</label>
        <select class="form-control" id="medico" name="Consulta.MedicoId" asp-for="Consulta.MedicoId" required>
            <option value="">Selecione um médico</option>
            @foreach (var medico in Model.Medicos)
            {
                <option value="@medico.Id">@medico.Nome</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="paciente">Paciente:</label>
        <select class="form-control" id="paciente" name="Consulta.PacienteId" asp-for="Consulta.PacienteId" required>
            <option value="">Selecione um paciente</option>
            @foreach (var paciente in Model.Pacientes)
            {
                <option value="@paciente.Id">@paciente.Nome</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="dataHora">Data e Hora:</label>
        <input type="datetime-local" class="form-control" id="dataHora" name="Consulta.DataHora" asp-for="Consulta.DataHora" required>
    </div>
    <div class="form-group">
        <label for="tipo">Tipo de Consulta:</label>
        <select class="form-control" id="tipo" name="Consulta.Tipo" asp-for="Consulta.Tipo" required>
            <option value="">Selecione o tipo de consulta</option>
            <option value="Presencial">Presencial</option>
            <option value="Online">Online</option>
        </select>
    </div>
    <div class="form-group">
        <label for="observacoes">Observações:</label>
        <textarea class="form-control" id="observacoes" name="Consulta.Observacoes" asp-for="Consulta.Observacoes"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
