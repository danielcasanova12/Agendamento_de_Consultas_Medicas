@page
@model Agenda_Web.Pages.Paciente.Create

<h1>Adicionar Novo Paciente</h1>

<form method="post">
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input type="text" asp-for="PacienteModel.Nome" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="Sobrenome">Sobrenome:</label>
        <input type="text" asp-for="PacienteModel.Sobrenome" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="NúmeroIdentificacao">Número de Identificação:</label>
        <input type="text" asp-for="PacienteModel.NúmeroIdentificação" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="HistoricoMedico">Histórico médico:</label>
        <input type="text" asp-for="PacienteModel.HistoricoMedico" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Adicionar Paciente</button>
</form>
