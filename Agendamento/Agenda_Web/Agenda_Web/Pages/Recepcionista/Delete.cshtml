@page "{id:int}"
@model Agenda_Web.Pages.Recepcionista.DeleteModel

<h1>Excluir Recepcionista</h1>

<div class="container mt-5">
    <p>Tem certeza de que deseja excluir o recepcionista abaixo?</p>

    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.RecepcionistaModel.IdRecepcionista</dd>

        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">@Model.RecepcionistaModel.Nome</dd>

        <dt class="col-sm-2">Sobrenome:</dt>
        <dd class="col-sm-10">@Model.RecepcionistaModel.Sobrenome</dd>

        <dt class="col-sm-2">Número de Identificação:</dt>
        <dd class="col-sm-10">@Model.RecepcionistaModel.NúmeroIdentificação</dd>

        <dt class="col-sm-2">Número de Telefone:</dt>
        <dd class="col-sm-10">@Model.RecepcionistaModel.NúmeroTelefone</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="RecepcionistaModel.IdRecepcionista" />
        <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
        <a class="btn btn-secondary" href="/Recepcionista/Index">Cancelar</a>
    </form>
</div>

