@page
@model Agenda_Web.Pages.Recepcionista.EditarModel

<h1>Editar Recepcionista</h1>

<form method="post">
    <input type="hidden" asp-for="Recepcionista.IdRecepcionista" />
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input type="text" asp-for="Recepcionista.Nome" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="Sobrenome">Sobrenome:</label>
        <input type="text" asp-for="Recepcionista.Sobrenome" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="NúmeroIdentificação">Número de Identificação:</label>
        <input type="text" asp-for="Recepcionista.NúmeroIdentificação" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="NúmeroTelefone">Número de Telefone:</label>
        <input type="text" asp-for="Recepcionista.NúmeroTelefone" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>
