@page
@model Agenda_Web.Pages.Medico.CreateModel
@{
}

<h1>Cadastrar Médico</h1>

<form method="post">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" class="form-control" id="nome" name="Medico.Nome" asp-for="Medico.Nome" required>
    </div>
    <div class="form-group">
        <label for="crm">CRM:</label>
        <input type="text" class="form-control" id="crm" name="Medico.CRM" asp-for="Medico" required>
    </div>
    <div class="form-group">
        <label for="especialidade">Especialidade:</label>
        <input type="text" class="form-control" id="especialidade" name="Medico.Especialidade" asp-for="Medico.Especialidade" required>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>