@page
@model Agenda_Web.Pages.Especialidade.CreateModel

<form method="post">
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input type="text" class="form-control" id="Nome" asp-for="Especialidade.Nome">
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição:</label>
        <textarea class="form-control" id="Descricao" asp-for="Especialidade.Descricao"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
