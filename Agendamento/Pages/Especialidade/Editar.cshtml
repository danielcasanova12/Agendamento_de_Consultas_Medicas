@page
@model EspecialidadeEditModel

<h1>Editar Especialidade</h1>

<form method="post">
    <input type="hidden" asp-for="IdEspecialidade" />
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input type="text" asp-for="Nome" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="Descrição">Descrição:</label>
        <textarea asp-for="Descrição" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>
