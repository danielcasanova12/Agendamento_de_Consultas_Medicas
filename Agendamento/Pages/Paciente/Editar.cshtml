@page
@model PacienteEditModel

<h1>Editar Paciente</h1>

<form method="post">
    <input type="hidden" asp-for="IdPaciente" />
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input type="text" asp-for="Nome" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="Sobrenome">Sobrenome:</label>
        <input type="text" asp-for="Sobrenome" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="NúmeroIdentificação">Número de Identificação:</label>
        <input type="text" asp-for="NúmeroIdentificação" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>
