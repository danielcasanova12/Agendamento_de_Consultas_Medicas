@page
@model List<MedicoModel>

    <h1>Médicos</h1>

    <p>
        <a asp-page="Criar">Adicionar Novo Médico</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Especialidade</th>
                <th>Número de Registro Profissional</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medico in Model)
        {
            <tr>
                <td>@medico.IdMedico</td>
                <td>@medico.Nome</td>
                <td>@medico.Especialidade</td>
                <td>@medico.NumeroRegistroProfissional</td>
                <td>
                    <a asp-page="Editar" asp-route-id="@medico.IdMedico">Editar</a> |
                    <a asp-page-handler="Excluir" asp-route-id="@medico.IdMedico" class="text-danger"
                       data-confirm="Tem certeza de que deseja excluir este médico?">Excluir</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    @section Scripts {
        <script>
        // Adicionar confirmação de exclusão
        $(document).ready(function () {
            $('a[data-confirm]').click(function () {
                return confirm($(this).data('confirm'));
            });
        });
        </script>
    }
