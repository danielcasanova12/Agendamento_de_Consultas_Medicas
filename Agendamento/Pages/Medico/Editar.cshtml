@page
@model MedicoEditModel

<h1>Editar Médico</h1>

<form method="post">
    <input type="hidden" asp-for="IdMedico" />
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input type="text" asp-for="Nome" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="Especialidade">Especialidade:</label>
        <input type="text" asp-for="Especialidade" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="NumeroRegistroProfissional">Número de Registro Profissional:</label>
        <input type="text" asp-for="NumeroRegistroProfissional" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>
